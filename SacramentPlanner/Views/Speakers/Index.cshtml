@*@model IEnumerable<SacramentPlanner.Models.Speaker>*@
@model dynamic
@*
    Find how to google how to receive the SacramentID to the Speaker
*@
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a href="/Speakers/Create/@ViewBag.sacramentId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Subject
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Speakers)
        {
            <tr>
                <td>
                    @*@Html.DisplayFor(modelItem => item.FirstName)*@
                    @item.FirstName
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.LastName)*@
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Subject)*@
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
